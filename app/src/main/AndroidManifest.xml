<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.twotle.everypic">

    <uses-permission
        android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/applogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EveryPic">
        <activity
            android:name=".PicViewActivity"
            android:exported="true" />
        <activity
            android:name=".upload.EditPicActivity"
            android:exported="true" />
        <activity
            android:name=".upload.PostPicActivity"
            android:exported="true" />
        <activity
            android:name=".sign.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".sign.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>